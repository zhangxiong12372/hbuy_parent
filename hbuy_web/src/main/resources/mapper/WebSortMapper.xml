<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.java.web.mapper.WebSortMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="WebSortEntity" id="webSortMap">
        <result property="id" column="id"/>
        <result property="sortname" column="sortName"/>
        <result property="updatetime" column="updateTime"/>
    </resultMap>
  
  <!--要查询的字段-->  
  <sql id="sel_WebSortColumns_List" > 
  	  id ,        
   sortName  ,        
   updateTime          
  
  </sql>
  
  <!--要添加的字段-->
  <sql id="ins_WebSortColumns_List" >
       #{id},   #{sortname},   #{updatetime}   </sql> 
  
  <!--要修改的字段-->
  <sql id="upd_WebSortColumns_List" >
    <set>
    <if test="t.sortname != null">sortName = #{t.sortname}, </if>
    <if test="t.updatetime != null">updateTime = #{t.updatetime}</if>
	</set>
	where id = #{t.id}
  </sql> 
  
  <!--定义删除的条件-->
  <sql id="del_WebSortPramas_List">
    <where>
    <if test="t.id != null">and id = #{t.id}</if>
    <if test="t.sortname != null">and sortName = #{t.sortname}</if>
    <if test="t.updatetime != null">and updateTime = #{t.updatetime}</if>
	</where>
  </sql> 
  
  <!--定义查询的条件-->
  <sql id="sel_WebSortPramas_List">
    <where>
    <if test="t.id != null">and id = #{t.id}</if>
    <if test="t.sortname != null">and sortName = #{t.sortname}</if>
    <if test="t.updatetime != null">and updateTime = #{t.updatetime}</if>
	</where>
  </sql>

    <!--添加-->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into web_sort values (<include refid="ins_WebSortColumns_List" />)
    </insert>

    <!--修改-->
    <update id="update">
        update web_sort <include refid="upd_WebSortColumns_List" />
    </update>

    <!--根据条件删除-->
    <delete id="delete">
        delete from web_sort <include refid="del_WebSortPramas_List" />
    </delete>

    <!--批量删除-->
    <delete id="deleteBatch">
        delete from web_sort where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!--根据主键id查询单个对象-->
	<select id="queryObjectById" resultMap="webSortMap">
		select  <include refid="sel_WebSortColumns_List" />  from web_sort where id = #{id}
	</select>
	
	<!--查询所有对象-->
	<select id="queryAll" resultMap="webSortMap">
		select  <include refid="sel_WebSortColumns_List" />  from web_sort
    </select>

    <!--根据条件（无条件）查询多个对象-->
	<select id="queryManyByPramas" resultMap="webSortMap">
		select  <include refid="sel_WebSortColumns_List" />  from web_sort <include refid="sel_WebSortPramas_List" />
	</select>
	
	<!--根据条件（无条件）分页查询-->
	<select id="queryListByPramas" resultMap="webSortMap">
		select  <include refid="sel_WebSortColumns_List" />  from web_sort <include refid="sel_WebSortPramas_List" /> order by id desc
	</select>

    <!--根据条件查询单条数据-->
    <select id="queryObjectByPramas" resultMap="webSortMap">
        select  <include refid="sel_WebSortColumns_List" />  from web_sort <include refid="sel_WebSortPramas_List" />
    </select>
	
	<!--根据条件（无条件）查询数据条数-->
 	<select id="queryTotalByPramas" resultType="java.lang.Long">
		select count(*) from web_sort <include refid="sel_WebSortPramas_List" />
	</select>
	


</mapper>